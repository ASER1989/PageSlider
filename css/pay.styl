@import 'comm'

#pay-page
  width: 20rem
  padding-top 2rem
  .hide
    display none !important;
  .card
    width 36rem
    margin auto
    border-radius 1px
    border-top solid 1px #cecece;
    height 26rem
    transform scale(0.5) translate3d(-16rem,-13rem,0);
  .product
    height 18rem
    background rgba(243, 243, 243, 0.38);
    font-size 8rem
    text-align center
    background url("../res/pay-bg.jpg")
    background-size 100% auto
    background-position: center;
    color: #ffffff;
    text-shadow: gray 3px 5px 5px;
  .proAttr
    border: solid 1px #cecece
    border-top:none !important;
    height 4rem
    display box
    >div
      width 33.33%
      text-align center
      font-size 1.8rem
      line-height 4rem;
      color: #8a8a8a
      &:nth-child(2)
        border-left:solid 1px #cecece
        border-right:solid 1px #cecece
  .check
    background url("../res/check.png") no-repeat
    background-size: auto 60%;
    background-position:90% 50%;

  .bottom
    position fixed
    bottom -1px;
    background url("../res/shop-car.png") no-repeat
    background-size auto 70%
    background-position 3% center
    height: 3rem;
    width: 20rem;
    border-top: solid 1px #e6e6e6;
    background-color: rgba(239, 239, 239, 0.56);
    display box
    >div
      text-align: right;
      line-height: 3rem;
      width:30%
      &:nth-child(1)
        width: 70%
        padding-left: 20%;
      &:last-child
        padding-right 1rem
  .paybutt
    width: 5rem;
    border: solid 1px goldenrod
    height: 1.9rem;
    border-radius: 4px;
    display: inline-block;
    line-height: 1.9rem;
    text-align: center;
    text-decoration: blink;
    color: #ffffff;
    background-color: #ffbb0f;
    font-weight: bold;
    font-size: 0.9rem;
  .info
    display box
    font-size: 1rem;
    >span
      width: 70%
      text-align right
      display block
      padding-right: 3px;
      font-size: 1rem;
    >select
      font-size: 1rem;
      width 30%
      display block
      height 3rem
      border: none !important
      text-align center
      background-color: rgba(239, 239, 239, 0.56);
      -webkit-appearance: none !important
      -webkit-rtl-ordering: none !important;
  #_price
    width: 2rem;
    display: inline-block;
    font-size: 1rem;
    text-align center